<%- include('partials/header') %>

<h1><%= title %></h1>

<!-- Alterative view if the deck is empty -->
<% if(cards.length ===0){ %>
  <p>Your deck is empty</p>
<% } %>

<div class="cardsContainer">
  <% cards.forEach( (card) => { %>

    <div class="card">
      <a href="/cards/<%= card.id %>">
        <img src="/visuals/<%= card.visual_name %>" alt="<%= card.name %> illustration">
        <p class="cardName"><%= card.name %> (lvl. <%= card.level %>)</p>
      </a>

      <% if(deck.find((deckCard) => deckCard === card.id)){ %>
        <a class="link--deleteCard" title="Ajouter au deck" href="/deck/delete/<%= card.id %>">[ - ]</a>
      <% } else { %>
        <a class="link--addCard" title="Ajouter au deck" href="/deck/add/<%= card.id %>">[ + ]</a>
      <% } %>

    </div>

  <% }) %>
</div>


<%- include('partials/footer') %>